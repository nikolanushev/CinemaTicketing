@model CinemaTicketing.Domain.DTO.AddToShoppingCartDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Add to Shopping Cart";
}

<h2>Add to cart</h2>
<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddMovieTicketToCart" method="post">
            <input type="hidden" asp-for="MovieTicketId" />
            <div class="form-group">
                <label asp-for="SelectedMovieTicket.Movie.MovieName"></label>
                <input disabled asp-for="SelectedMovieTicket.Movie.MovieName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SelectedMovieTicket.Movie.MoviePrice"></label>
                <input disabled asp-for="SelectedMovieTicket.Movie.MoviePrice" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SelectedMovieTicket.Ticket.TicketNumber"></label>
                <input disabled asp-for="SelectedMovieTicket.Ticket.TicketNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>