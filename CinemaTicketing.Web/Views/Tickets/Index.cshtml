@model List<CinemaTicketing.Domain.DomainModels.Ticket>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">New ticket</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="card" style="width: 20rem; margin:10px;">
                <div class="card-body">
                    <h5 class="card-title">Ticket Number: @item.TicketNumber</h5>
                    <p class="card-text">Row: @item.Row</p>
                    <p>Seat Number: @item.SeatNumber</p>
                    <p class="card-text">Hall: @item.Hall</p>
                    <p><small>Date: @item.DateAndTime</small></p>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>
